                <StackLayout HeightRequest="200">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="DyocenseUrl"/>
                    </StackLayout.GestureRecognizers>
                    <Image Source="dyocense.png"  Aspect="AspectFit"  Margin="0,0,0,0"/>
                    -->
